/**index.wxss**/
page{
  background-color: #ccc;
}
.slider,.slider image,.slider swiper{
  width: 100%;
  height: 390rpx;
}
.index-nav{
  display: flex;
  flex-wrap: wrap;
   background-color: #fff;
}
.index-nav .nav-item{
  width: 33.333%;
  height: 200rpx;
  border-bottom: 1rpx solid #ccc; 
  border-right: 1rpx solid #ccc;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  font-size: 16px;
  position: relative;
}
.index-nav .nav-item:nth-child(3n){
  border-right: 0 none;
}
.index-nav image{
  width: 80rpx;
  height: 80rpx;
}
/* 首页入口分区 */
.index-enter{
  margin-top: 20rpx;
  display: flex;
  padding:20rpx 25rpx; 
  background-color: #fff;
}
.index-enter .enter-item{
  width: 50%;
  display: flex;
  justify-content: center;
}
.index-enter image{
  width: 320rpx;
  height: 178rpx;
}
/* 封装模块间隔 */
.divider{
  height: 20rpx;
  background-color: #f1f1f1;
  box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, .3) inset;
}


