.text2{
    display: -webkit-box;
    font-size:14px;
    line-height: 40rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:3;
    overflow: hidden;
    text-overflow:ellipsis;
    color:#a19f9f;
}

.seach{
    position: fixed;
    top: 0;
    left: 0;
    height: 120rpx;
    width: 100%;
    background-color:#fff;
    display: flex;
    /* justify-content: center; */
    flex-direction: row;
}
.seach-input{
    display: inline-block;
    margin-top: 20rpx;
    margin-left: 20rpx;
    border: 1rpx solid rgb(196, 196, 196);
    height: 80rpx;
    width: 70%;
    padding-left: 30rpx;
}
.buttons{
    display: inline-block;
    margin-top: 20rpx;
    width: 20%;
    height: 80rpx;
    line-height: 80rpx;
    background-color: rgb(15, 248, 198);
    color:gray;
    border-radius: 10rpx;
}