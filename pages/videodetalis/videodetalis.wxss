/* pages/videodetalis/videodetalis.wxss */
page{
    background-color: #f1f1f1;
}
.myVideo{
    width: 100%;
}
.title{
    font-size: 24px;
    width: 100%;
    min-height: 100rpx;
    background-color: #fff;
    position: relative;
    box-shadow: 0rpx 0rpx 5rpx rgba(0, 0, 0, .3) inset;
}
.timespan{
    height: 40rpx;
    width: 100%;
    position: relative
}
.time{
    position: absolute;
    right: 10rpx;
    bottom: 10rpx;
    font-size: 12px;
    color:#8a8a8a;
}
.title-title{
    padding-left: 20rpx;
}
.inner{
    padding-left: 20rpx;
    min-height: 120rpx;
    width: 95%;
    margin: 0 auto;
    box-shadow: 0rpx 0rpx 5rpx rgba(0, 0, 0, .3) inset;
}
.name{
    font-size: 22px;
}
.text{
    padding-left: 60rpx;
    min-height: 50rpx;
    line-height: 50rpx;
    color: #706363;
    font-size: 18px;
}
.like{
   width: 100%;
   height: 100rpx;
   background-color: #fff;
   position: relative;
}
.like-favorite{
    position: absolute;
    left: 15rpx;
    bottom: 0;
}
.like-like{
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
}
.like-repost{
    position: absolute;
    bottom: 0;
    right: 30rpx;
}
.imgs{
    width: 50rpx;
    height: 50rpx;
}