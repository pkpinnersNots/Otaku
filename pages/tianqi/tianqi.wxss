/* pages/tianqi/tianqi.wxss */
page{
    background-color:#f1f1f1;
    background-image: url(https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1557980801218&di=4c02a9a62fbf4b1ec9190dbf5c4e7e26&imgtype=0&src=http%3A%2F%2Fimg1.voc.com.cn%2FUpLoadFile%2F2016%2F11%2F11%2F201611111619077602.png);
    padding-bottom: 150rpx;
    background-size:cover;
}
.seach{
    position: fixed;
    bottom: 0;
    left: 0;
    height: 120rpx;
    width: 100%;
    background-color:#fff;
    display: flex;
    /* justify-content: center; */
    flex-direction: row;
}
.seach-input{
    display: inline-block;
    margin-top: 20rpx;
    margin-left: 20rpx;
    border: 1rpx solid rgb(196, 196, 196);
    height: 80rpx;
    width: 70%;
    padding-left: 30rpx;
}
.buttons{
    display: inline-block;
    margin-top: 20rpx;
    width: 20%;
    height: 80rpx;
    line-height: 80rpx;
    background-color: rgb(15, 248, 198);
    color:gray;
    border-radius: 10rpx;
}
.cites{
    width: 100%;
    height: 100%;
    font-size: 30px;
    text-align: center;
}
.weatherApi{
    width: 100%;
    /* display: none; */
}
.inner{
    width: 95%;
    margin: 0 auto;
    padding-bottom: 150rpx;
}
.city{
    font-size: 20px;
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0 auto;
    border-bottom: 1rpx solid gray;
}
.wendu{
    height: 400rpx;
}
.high{
    font-size: 45px;
    height: 250rpx;
    color: rgb(15, 248, 198);
    display: flex;
    justify-content: center;
    align-items: center;
}
.ganmao{
    width: 90%;
    max-height: 150rpx;
    line-height: 50rpx;
    margin: 0 auto 40rpx;
}
.yesterday{
    font-size: 16px;
    width: 100%;
    height: 150rpx;
    line-height: 75rpx;
    margin: 0 auto;
    border:1rpx solid gray;
    border-radius: 15rpx;
}
.text-title{
    color: red;
    padding-left: 20rpx;
}
.text-data{
    padding-left: 20rpx;
}
.text-high{
    display: inline-block;
    padding-left: 20rpx;
    width: 100%;
    height: 75rpx;
    line-height: 75rpx;  
    text-overflow:ellipsis;
    word-wrap:break-word;
}
.list{
    width: 100%;
    box-sizing: border-box;
    margin-top: 100rpx;
    display: flex;
    justify-content: center;
    flex-direction: row;
}
.items{
    width: 18%;
    height: 680rpx;
    border: 1px solid gray;
    border-radius: 20rpx;
    margin: 0 10rpx;
}
.top{
    text-align: center;
    font-size: 18px;
    height: 150rpx;
    line-height: 75rpx;
    color: orange;
    border-bottom: 1rpx solid gray;
}
.bottom{
    line-height: 75rpx;
}
.bottom1{
    display: block;
    text-align: center;
}