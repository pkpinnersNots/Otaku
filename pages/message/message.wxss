/* pages/message/message.wxss */
page{
    background-color: #f1f1f1;
}
.card{
    background-color: #fff;
    border: 1rpx solid #ddd;
    border-radius: 20rpx;
    margin: 40rpx 20rpx;
    padding: 20rpx 30rpx;
    display: flex;
    flex-direction: column;
}
.card-title{
    font-size: 24px;
    margin-bottom: 20rpx;
}
.card-data{
    font-size: 14px;
    color: #ccc;
    border-bottom:1rpx solid #ddd;
    margin-bottom: 20rpx;
}
.card-img{
    width: 100%;
    max-height: 450rpx;
}
.card-desc{
    font-size: 16px;
    max-height: 130rpx;
    overflow: hidden;
    color: #333;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #ddd;
    margin: 20rpx 0;
}
.card-read{
    font-size: 14px;
    color:#666;
}
