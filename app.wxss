/**app.wxss**/
.bgw{
  background-color: #fff;
}
.mt20{
  margin-top: 20;
}
/* 间隔封装 */
.divder{
    height: 20rpx;
    background-color: #f1f1f1;
    box-shadow: 0 5rpx 5rpx rgb(0,0,0,0.1) inset;
}
/* 细线右边框封装 */
.bgr{
  position: relative;
}
.bgr::after{
  content: "";
  width: 1rpx;
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
}
/* 箭头封装 */
.arrow{
    display: flex;
    justify-content: space-between;
    align-items: center;

}
.arrow::after{
    content: "";
    width: 15rpx;
    height: 15rpx;
    border-top: 3rpx solid #ccc;
    border-right: 3rpx solid #ccc;
    transform:  rotate(45deg);
}
/* 水平居中 */
.center{
    display: flex;
    justify-content: center;
    align-items: center;
}
/* 列表封装 */
.cell{
    font-size: 16px;
    background-color: #fff;
}
.cell-item{
    border-bottom: 1rpx solid #ddd;
    padding: 20rpx 30rpx;
}